
<%= form_for(@ticket) do |f| %>
    <%= render 'common/errors', resourse:@ticket %>
    <div class="field">
      <%= f.label :user_name %>
      <%= f.text_field :user_name %>
    </div>

    <div class="field">
      <%= f.label :user_id %><br>
      <%= f.collection_select :user_id, User.all, :id, :name %>
    </div>

    <div class="field">
      <%= f.label :train_id, "Train" %><br>
      <%= f.collection_select :train_id, Train.all, :id, :number %>
    </div>

    <div class="field">
      <%= f.label :first_station, "First Station" %>
      <%= f.collection_select :first_station_id, RailwayStation.all, :id, :title %>
    </div>

    <div class="field">
      <%= f.label :latest_station, "Latest Station" %>
      <%= f.collection_select :latest_station_id, RailwayStation.all, :id, :title %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>